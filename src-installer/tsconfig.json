{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"strict": true,
		"strictBindCallApply": true,
		"outDir": "../app/installer",
		"pretty": true
	},
	"include": [
	  "../src-installer/**/*",
	  "../@types/core-defs/**/*",
	  "../@types/platform-defs/**/*"
	],
	"exclude": [
		"../node_modules/@types/jasmine/**/*",
		"../node_modules/@types/jest/**/*",
		"../node_modules/@types/testing-library__jest-dom/**/*"
	]
}