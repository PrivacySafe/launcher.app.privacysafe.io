{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "importHelpers": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "node",
      "vite/client",
      "@varlet/ui/types/global"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [{
      "name": "@vuedx/typescript-plugin-vue"
    }]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json",
    "@types"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
